<resources>

    <style name="PlanMessage" parent="">
        <item name="android:background">@drawable/message_background</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="PlanMessage.Hour">
        <item name="android:background" />
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="fontFamily">@font/segoe_ui_bold</item>
    </style>

    <style name="PlanMessage.Class">
        <item name="android:background" />
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_margin">5dp</item>
        <item name="fontFamily">@font/segoe_ui</item>
    </style>

    <style name="PlanMessage.Info">
        <item name="android:background" />
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:layout_margin">5dp</item>
        <item name="fontFamily">@font/segoe_ui_italic</item>
    </style>
</resources>