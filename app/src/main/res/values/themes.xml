    <style name="Theme.DBGApp" parent="Theme.MaterialComponents.Bridge">
        <item name="colorPrimary">@color/dbg_red</item>
        <item name="colorPrimaryVariant">@color/dbg_red_variant</item>
        <item name="colorPrimaryDark">@color/dbg_red</item>
        <item name="colorOnPrimary">@color/text</item>

        <item name="colorSecondary">#AAAAAA</item>
        <item name="colorSecondaryVariant">#CCCCCC</item>
        <item name="colorOnSecondary">@color/dbg_red</item>

        <item name="colorError">#FF0000</item>
        <item name="colorOnError">#000000</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/dbg_red_variant</item>

        <item name="windowNoTitle">true</item>
