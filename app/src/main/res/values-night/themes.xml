<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DBGApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Icon Colors -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dbg_red</item>
        <item name="colorPrimaryVariant">@color/dbg_red</item>
        <item name="colorPrimaryDark">@color/dbg_red</item>
        <item name="colorOnPrimary">#008</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ThemeOverlay.DBGApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="fullscreenTextColor">@color/black</item>
    </style>
</resources>